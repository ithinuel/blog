body.default
    background main

$profile
    li
        margin 0
        list-style-type none
    .person
        @media screen and (max-height: 580px)
            display none
        img
            size(130, 130)
            border-radius 100%
    .recent
        +below(320px)
            &:last-child
                display none
        center(450px)
        p
            text-align left
            color white
        a
            text-decoration none
            h2
                text-align left
                overflow hidden
                margin 0
                font-weight 300
                font-size rem(17px)
                border-bottom 1px solid lighten(background1, 80%)
                &:hover
                    background alpha(lighten(background1, 85%), 40%)
                .when
                    float: right
                    color: grey
    h1, h2
        color: sec
        text-align center
    h1
        @media screen and (max-height: 580px) and (max-width: 350px)
            margin-top 60px
    .site-title
        font-size rem(30px)
        line-height 1
        display block
        letter-spacing 9px
        padding-left 9px // letter-spacing adds space after each character
        +above(cut)
            letter-spacing 16px
            padding-left 16px // letter-spacing adds space after each character
            margin-bottom 0
            font-size rem(20px)
    .site-description
        font-size rem(20px)
        display block
        margin rem(30px) 0
        +above(cut)
            font-size rem(10px)


.default>section
    @extend $profile
    &.content
        width 95%
        @media screen and (max-height: 580px)
            align(horizontal)
        @media screen and (min-height: 580px)
            align(both)
        text-align center
    .icons-home
        text-align center
        a
            display inline-block
            padding rem(15px)
            margin rem(2px)
            border-radius 50%
            border rem(2px) solid sec
            line-height 0
            transition all .7s
            .icon
                fill sec
                size(18,18)
                +above(cut)
                    size()
            &:hover
                background sec
                .icon
                    fill main


